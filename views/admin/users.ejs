<!DOCTYPE html>
<html lang="en">

<head>
    <title>users</title>
    <%- include('../partials/metadata') %>
</head>

<body>
    <!-- ======= Header ======= -->
    <%- include('../partials/header') %>

        <!-- ======= Sidebar ======= -->
        <%- include('../partials/sidebar') %>


            <!-- Main content-->
            <main id="main" class="main">

                <div class="container-fluid">
                    <div class="col-sm-20 col-xl-12">
                        <div class="bg-light rounded h-100 p-4" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
                            <table class="table table-hover" id="tasksTable">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Surname</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Contact</th>
                                        <th scope="col">Date Registered</th>
                                        <th scope="col">Number of Haircuts</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <% let count=0 %>
                                        <% for(let user of users){ %>
                                            <tr>
                                                <th scope="row">
                                                    <%= count=count + 1 %>
                                                </th>
                                                <td>
                                                    <%= user.name %>
                                                </td>
                                                <td>
                                                    <%= user.surname %>
                                                </td>
                                                <td>
                                                    <%= user.email %>
                                                </td>
                                                <td>
                                                    <%= user.contact %>
                                                </td>
                                                <td>2023/04/01</td>
                                                <td>3</td>
                                            </tr>

                                            <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </main><!-- End #main -->

            <!-- ======= Footer ======= -->
            <%- include('../partials/footer') %>
</body>

</html>